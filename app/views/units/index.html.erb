

<h1>Units</h1>

<table class="table table-striped">
<thead>
	<tr><th>Unit ID</th><th>Name</th><th>Number of Members</th><th></th></tr>
</thead>

<tbody>

	<% @units.each do |unit| %>
		<tr>
			<td><%= unit.id %></td>
			<td><%= link_to(unit.name, unit_path(unit)) %></td>
			<td><%= unit.member_count %></td>
			<td><%= link_to("edit", edit_unit_path(unit), class: "btn btn-mini") %> 
				<%= link_to("destroy", unit_path(unit), method: "delete", data: { confirm: "Are you sure?" }, class: "btn btn-mini btn-danger") %>
			</td>
		<tr>
	<% end %>

</tbody>

</table>

<%= link_to("add a unit", new_unit_path, class: "btn btn-primary") %>