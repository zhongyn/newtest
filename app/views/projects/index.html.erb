
<div class="container-fluid">
	<div class="row-fluid">
    	<div class="span8">
			<h1>Projects for <%= @unit.name %></h1>

			<table class="table table-striped">
			<thead>
				<tr><th>Name</th><th>Description</th><th></th></tr>
			</thead>

			<tbody>
				<% @projects.each do |project| %>
					<tr>
						<td><%= link_to(project.name, unit_project_path(@unit,project)) %></td>
						<td><%= project.description %></td>
						<td><%= link_to("edit", edit_unit_project_path(@unit,project), class: "btn btn-mini") %>
							<%= link_to("destroy", unit_project_path(@unit,project), method: "delete", data: { confirm: "Are you sure?" }, class: "btn btn-mini btn-danger") %>
						</td>
					<tr>
				<% end %>
			</tbody>

			</table>

			<%= link_to("add a project", new_unit_project_path, class: "btn btn-primary") %>
		</div>
	</div>
</div>