

<%= simple_form_for [@unit, @project] do |f| %>

  	<legend><%= controller.action_name.capitalize %> Project for <%= @unit.name%></legend>
    <div class="control-group">
      <%= f.input :name, placeholder: "Enter name" %>
    </div> 
    <div class="control-group">
    	<%= f.input :description, {class: "Enter description"} %>
    </div>
    <div class="form-actions">
    	<%= f.button :submit, class: "btn btn-primary" %>
    </div>
<% end %>